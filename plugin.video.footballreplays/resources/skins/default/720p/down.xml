<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control type="grouplist">
      <width>1280</width>
      <height>720</height>
      <align>center</align>
      <orientation>horizontal</orientation>
      <control type="group">
        <width>500</width>
        <control type="grouplist">
          <usecontrolcoords>true</usecontrolcoords>
          <orientation>vertical</orientation>
          <!-- <align>center</align> -->
          <control type="image">
            <posy>20</posy>
            <description>background image</description>
            <width>500</width>
            <height>600</height>
            <texture colordiffuse="DDFFFFFF" border="33,45,35,45">DialogBack.png</texture>
          </control>
        </control>
      </control>
    </control>
    <control type="grouplist">
      <width>1280</width>
      <height>720</height>
      <align>center</align>
      <usecontrolcoords>true</usecontrolcoords>
      <orientation>horizontal</orientation>
      <control type="group">
        <width>500</width>
        <height>720</height>
        <control type="grouplist">
          <orientation>vertical</orientation>
          <align>center</align>
          <control type="group">
            <animation effect="fade" time="2000">WindowOpen</animation>
            <height>500</height>
            <control type="image">
              <top>45</top>
              <height>550</height>
              <width>500</width>
              <aspectratio>keep</aspectratio>
              <bordertexture>DialogBack2.png</bordertexture>
              <texture>redCard.png</texture>
              <bordersize>33,45,35,45</bordersize>
            </control>
          </control>
          <control type="grouplist">
            <usecontrolcoords>true</usecontrolcoords>
            <top>-130</top>
            <width>500</width>
            <height>700</height>
            <align>center</align>
            <animation tween="Bounce" easing="inout" reversible="true" effect="slide" start="0,200" end="0,0" delay="0" time="2000">WindowOpen</animation>
            <orientation>horizontal</orientation>
            <control type="button">
              <posy>130</posy>
              <texturefocus colordiffuse="DDFFFFFF" border="5">DialogBack.png</texturefocus>
              <texturenofocus colordiffuse="DDFFFFFF" border="5">DialogBack.png</texturenofocus>
              <label>Sorry The Source is Down</label>
              <width>500</width>
              <height>50</height>
              <align>center</align>
              <aligny>center</aligny>
              <textcolor>white</textcolor>
            </control>
          </control>
        </control>
      </control>
    </control>
